<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App"/>

    <style name="App.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider.thickness</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="App.Divider.Toolbar"/>

    <style name="App.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding.small</item>
        <item name="android:paddingTop">@dimen/padding.smallest</item>
        <item name="android:paddingEnd">@dimen/padding.small</item>
        <item name="android:paddingBottom">@dimen/padding.smallest</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App.Button.Rnd">
        <item name="android:background">@drawable/btn_rnd_accent</item>
        <item name="android:minHeight">@dimen/btn.min_height</item>
        <item name="android:textSize">@dimen/text.size</item>
    </style>
</resources>