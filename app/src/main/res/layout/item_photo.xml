<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.programmerr47.flickrawesomeclient.RectangleImageView
        android:id="@+id/riv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:factor="1"
        tools:srcCompat="@drawable/photo_placeholder"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/t_veil"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/padding.small"
        android:textColor="@color/t_primary_dark"
        android:textSize="@dimen/text.size.small"
        tools:text="Title of photo"/>

</FrameLayout>